generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DB_URL")
  // provider  = "postgresql"
  // url       = env("POSTGRES_PRISMA_URL")
  // directUrl = env("POSTGRES_URL_NON_POOLING")
}

model User {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  password String
  imageUrl String
  role     Role   @default(student)
  tasks    Task[]
}

enum Role {
  tutor
  student
}

model Task {
  id      String  @id @default(uuid())
  content String
  isDone  Boolean
  owner   User?   @relation(fields: [ownerId], references: [id])
  ownerId String?
}
